mixin header
  +b.HEADER.header
    +burger({"class": "__burger"})
    +logo({"class": "__logo"})
    +e.wrap
      +b.NAV.nav
        +e.UL.list
          +e.item: +e.A.link.isCurrent(href="#main") Главная
          +e.item: +e.A.link(href="#about") О бренде
          +e.item: +e.A.link(href="#production") Продукция
          +e.item: +e.A.link(href="#certificates") Сертификаты
          +e.item: +e.A.link(href="#catalogs") Каталоги
          +e.item: +e.A.link(href="#leftovers") Остатки на складе
          +e.item: +e.A.link(href="#objects") Объекты
          +e.item: +e.A.link(href="#contacts") Контакты
