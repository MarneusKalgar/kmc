mixin header
  +b.HEADER.header
    +burger({"class": "__burger"})
    +logo({"class": "__logo"})
    +e.wrap
      +b.NAV.nav
        +e.UL.list
          +e.item: +e.A.link.isCurrent(data-scroll href="#main") Главная
          +e.item: +e.A.link(data-scroll href="#about") О Компании
          +e.item: +e.A.link(data-scroll href="#production") Продукция
          +e.item: +e.A.link(data-scroll href="#certificates") Сертификаты
          +e.item: +e.A.link(data-scroll href="#catalogs") Каталоги
          +e.item: +e.A.link(data-scroll href="#leftovers") Остатки на складе
          +e.item: +e.A.link(data-scroll href="#objects") Объекты
          +e.item: +e.A.link(data-scroll href="#contacts") Контакты
